import:
 - ~/.config/alacritty/themes/3024.dark.yml

window:
  opacity: 1
  padding:
    x: 3
    y: 3
      
font:
  size: 9
  normal:
    family: Literation Mono Nerd Font
    style: Regular
  bold:
    family: Literation Mono Nerd Font 
    style: Bold
  italic:
    family: Literation Mono Nerd Font
    style: Italic
  bold_italic:
    family: Literation Mono Nerd Font
    style: Bold Italic

selection:
  save_to_clipboard: true
